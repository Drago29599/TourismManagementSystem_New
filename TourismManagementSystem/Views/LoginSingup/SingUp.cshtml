@model TourismManagementSystem.Models.Customer

@{
    ViewBag.Title = "SingUp";
}
@Html.Raw(ViewBag.InsertMessage)
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Assests/CustomCSS/UserLoginStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="box">
        <div class="container1" style="border: 1px solid rgba(255,255,255,0.5); border-radius: 10px; backdrop-filter: blur(5px); padding: 15px 15px 15px 15px;">
            <div class="top-header">
                <h3 style="text-align:center; color:white;">Welcome to Ocean Tourism</h3>
                <hr style="color:white;" />
                <span style="">Customer Registration</span>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row">
                        @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label col-md-3 text-white" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.CustomerEmailId, htmlAttributes: new { @class = "control-label col-md-3 text-white" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.CustomerEmailId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CustomerEmailId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.CustomerPassword, htmlAttributes: new { @class = "control-label col-md-3 text-white" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.CustomerPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CustomerPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.CustomerPhone, htmlAttributes: new { @class = "control-label col-md-3 text-white" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.CustomerAdress, htmlAttributes: new { @class = "control-label col-md-3 text-white" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.CustomerAdress, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CustomerAdress, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2" style="padding-left:125px">
                            <input type="submit" value="SingUp" class="btn btn-primary" />
                        </div>
                    </div>
                    <hr style="color:white" />
                    <div class="form-horizontal text-center">
                        @Html.ActionLink("Back to Login Page", "Index", null, new { @class = "btn btn-secondary" })
                    </div>

                }
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
