@model IEnumerable<TourismManagementSystem.Models.Employee>

@{
    ViewBag.Title = "GetEmployeeById";
    Layout = "~/Views/Shared/_EmployeeDashboardLayout.cshtml";
}


    @foreach (var item in Model)
    {
        
               

           
        <div class="container-md" style="border: 2px solid; width: 550px; height: 400px; border-radius: 10px;">
            <div class="container" style="display: flex; align-items: center; margin-top:15px; margin-bottom:10px;">
                <img src="~/Assests/Images/profile_pic.png" alt="Profile Image" style="border-radius: 50%; width: 100px; height: 100px;  top: 10px; left: 10px;">
                <h6 style="top: 20px; left: 130px; font-size: 25px; margin-left: 20px;">@Html.DisplayFor(modelItem => item.EmpUserName)</h6>
            </div>
            <hr />
            <ul>
                <li><b>Designation : </b>@Html.DisplayFor(modelItem => item.EmployeeRole)</li>
                <li><b>First Name : </b>@Html.DisplayFor(modelItem => item.EmpFirstName)</li>
                <li><b>Last Name : </b>@Html.DisplayFor(modelItem => item.EmpLastName)</li>
                <li><b>Employee Email : </b>@Html.DisplayFor(modelItem => item.EmpEmail)</li>
                <li><b>Contact Number : </b>+91 @Html.DisplayFor(modelItem => item.EmpPhoneNumber)</li>
                <li><b>Residential Address : </b>@Html.DisplayFor(modelItem => item.EmpResidentialAddress)</li>
            </ul>
            <hr />
            <div class="container" style="margin-left:300px">
                @Html.ActionLink("Edit My Details", "EditEmployee", "Employee", new { id = item.EmployeeId }, new { @class = "btn btn-secondary" })
            </div>
        </div>
    }




