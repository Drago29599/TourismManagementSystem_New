<form action="https://localhost:44311/Employee/BuyPackage" method="post" class="form-horizontal">
    <div class="container" style="margin-left: 17%; margin-top: 70px">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Package Name</label>
            <div class="col-sm-6">
                <select class="form-control" name="pkgid">
                    @foreach (var package in ViewBag.Packages)
                    {
                        if (package.StartDate.Subtract(DateTime.Now).TotalDays > 0) { <option value="@package.PackId">@package.PackageName ( Rs. @package.Price- For @package.NoOfPeoples Guests)</option>}
                        
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Customer ID</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="custid" placeholder="Enter Customer ID here">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Guest's Names: </label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="guest" placeholder="Enter Guest's Names here">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 offset-sm-2">
                <button type="submit" class="btn btn-primary">Buy</button>
            </div>
        </div>
    </div>
</form>

