@model TourismManagementSystem.Models.Package

@{
    ViewBag.Title = "DeletePackage";
    if (ViewBag.Role == "Admin")
    {
        Layout = "~/Views/Shared/_Layout_List_AdminDashboard.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_EmployeeDashboardLayout.cshtml";
    }
}

<h2>DeletePackage</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Package</h4>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            @Html.DisplayNameFor(model => model.PackageName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PackageName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NoOfPeoples)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PickupPoint)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PickupPoint)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PackageDetails)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PackageDetails)
        </dd>

    </dl>

   

    @using (Html.BeginForm("DeletePackageConfirmed", "Package", new { id = Model.PackId }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Delete" class="btn btn-danger" style="margin-bottom:15px;"/>
        
        
        if (ViewBag.Role == "Admin")
        {
            <div>
                @Html.ActionLink("Cancel", "Index", "AdminDashboard", null, new { @class = "btn btn-secondary" })
            </div>
        }
        else
        {
            <div>
                @Html.ActionLink("Cancel", "Index", "Employee", null, new { @class = "btn btn-secondary" })
            </div>
        }
    }
</div>
